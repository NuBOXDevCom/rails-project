<%= form_for @recipe do |f| %>
    <% if recipe.errors.any? %>
        <div class="alert alert-warning" role="alert">
          <ul>
            <% recipe.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group row">
      <%= f.label :name, 'Nom', class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.text_field :name, autofocus: true, class: 'form-control', required: true %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :nb_persons, 'Nombre de personnes', class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.number_field :nb_persons, class: 'form-control', required: true %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :preparation_time, 'Temps de préparation', class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.number_field :preparation_time, class: 'form-control', required: true %>
        <small class="form-text text-muted">
          Minutes
        </small>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :cooking_time, 'Temps de cuisson / repos', class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.number_field :cooking_time, class: 'form-control', required: true %>
        <small class="form-text text-muted">
          Minutes
        </small>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :ingredients, 'Ingrédients', class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.text_area :ingredients, class: 'form-control', required: true %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :category, 'Catégorie', class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.select :category_id, Category.pluck(:name, :id), {}, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :preparation, 'Etapes de Préparation', class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.text_area :preparation, class: ' tinymce', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit 'Enregistrer', class: 'btn btn-outline-success' %>
    </div>
<% end %>