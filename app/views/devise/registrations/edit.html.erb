<% content_for :tab, :profile %>
<% content_for :content do %>
    <div class="card">
      <div class="card-header text-white bg-secondary">
        <h3><%= t('.title') %></h3>
      </div>
      <div class="card-body mx-auto">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>
              <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
            </p>
        <% end %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group row">
              <%= f.label :username, class: 'col-sm-4 col-form-label' %>
              <div class="col-sm-8">
                <%= f.text_field :username, autofocus: true, class: 'form-control', required: true %>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :email, class: 'col-sm-4 col-form-label' %>
              <div class="input-group mb-2 mb-sm-0 col-sm-8">
                <div class="input-group-addon">@</div>
                <%= f.email_field :email, class: 'form-control', placeholder: t('activerecord.attributes.user.email'), required: true %>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :gender, 'Vous Ãªtes ?', class: 'col-sm-4 col-form-label' %>
              <div class="col-sm-8">
                <%= f.select :gender, {Homme: :M, Femme: :F}, {}, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :birthday, 'Date de naissance', class: 'col-sm-4 col-form-label' %>
              <div class="col-sm-8">
                <%= f.text_field :birthday, class: 'form-datepickr' %>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :height, 'Votre taille (cm)',class: 'col-sm-4 col-form-label' %>
              <div class="col-sm-8">
                <%= f.number_field :height, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :password, t('activerecord.attributes.user.password'), class: 'col-sm-4 col-form-label' %>
              <div class="col-sm-8">
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
                <small class="form-text text-muted">
                  <%= t('.leave_blank_if_you_don_t_want_to_change_it') %>
                </small>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation'), class: 'col-sm-4 col-form-label' %>
              <div class="col-sm-8">
                <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
                <small class="form-text text-muted">
                  <%= t('.leave_blank_if_you_don_t_want_to_change_it') %>
                </small>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :current_password, t('activerecord.attributes.user.current_password'), class: 'col-sm-4 col-form-label' %>
              <div class="col-sm-8">
                <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control', required: true %>
                <small class="form-text text-muted">
                  <%= t('.we_need_your_current_password_to_confirm_your_changes') %>
                </small>
              </div>
            </div>
            <div class="form-group">
              <%= f.submit t('.update'), class: 'btn btn-outline-success' %>
            </div>
        <% end %>
      </div>
      <div class="card-footer">
        <h3><%= t('.cancel_my_account') %></h3>
        <p><%= link_to t('.cancel_my_account'), registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete, class: 'btn btn-danger' %></p>
      </div>
    </div>
<% end %>
<%= render template: 'layouts/profile' %>